FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY ../../go.mod ../../go.sum ./
RUN go mod download

COPY ../../ ./

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
    go build -ldflags="-s -w" -o app ./cmd/app/main.go

FROM alpine:3.20

WORKDIR /app
COPY --from=builder /app/app .
COPY --from=builder /app/migrations ./migrations
EXPOSE 8080

CMD ["./app"]